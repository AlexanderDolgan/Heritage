//Site header
header#site-header.is-black
	//top-panel
	.l-top-panel
		//hamburger btn for mobile
		.ham-btn
			button(type="button" class="sec-menu-btn")
				span.fi-list.is-text-white  Sections

		//logo
		.text-logo.is-hide
			a(href="index.html").text-logo__link
				img.text-logo__img(src="../img/assets/logo-white.svg")

		//navigation
		nav.nav
			each val in ['Home', 'Investment', 'Structure', 'Investors', 'Contacts']
				a.nav__link(href= val + ".html")= val